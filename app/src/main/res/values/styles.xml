<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:colorBackground">@color/bgDarkGrey</item>
        <item name="android:textColor">@color/bgWhite</item>
    </style>

    <style name="ContentSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/material_ripple_light</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@mipmap/ic_navigation_close</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@mipmap/ic_back_arrow</item>

        <!-- Change icon for the suggestions
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>-->

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@color/bgGrey2</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/bgBlackAlpha</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/bgGrey2</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>

        <item name="android:inputType">text|textAutoComplete</item>
    </style>

    <style name="ContentSearchView">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
