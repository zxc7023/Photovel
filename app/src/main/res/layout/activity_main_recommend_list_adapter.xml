<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_store"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/RlmainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/main_ivphoto"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/bgToMeong"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true">
        </ImageView>
        <LinearLayout
            android:id="@+id/llmainSubject"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_above="@+id/llmainButtons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/bgToMeong"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/contentSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/bgWhite"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llmainButtons"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/main_ivphoto"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llthumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_icthumb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_thumbs_o_up"
                    android:textSize="@dimen/icon_size" />
                <TextView
                    android:id="@+id/recommend_thumbCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/most_left_tv_margin"
                    android:textColor="@color/bgDarkGrey"
                    android:text="13"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llcomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_iccomment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_comments"
                    android:textSize="@dimen/icon_size" />
                <TextView
                    android:id="@+id/recommend_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/most_left_tv_margin"
                    android:textColor="@color/bgDarkGrey"
                    android:text="13"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llshare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="right|center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_icshare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_share"
                    android:textSize="@dimen/icon_size" />
                <TextView
                    android:id="@+id/recommend_shareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="@dimen/most_left_tv_margin"
                    android:textColor="@color/bgDarkGrey"
                    android:text="13"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>