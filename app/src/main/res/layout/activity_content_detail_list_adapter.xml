<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivphoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@drawable/xml_border"
            android:layout_alignParentTop="true">
        </ImageView>
        <LinearLayout
            android:id="@+id/lldetailInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:layout_below="@+id/ivphoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/icmarker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/fa_icon_marker"
                android:textSize="30dp"
                android:textColor="@color/textPurple"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="서울시 마포구"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2017/06/06"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lldetailContent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/xml_border2"
            android:layout_below="@+id/lldetailInfo">
            <TextView
                android:id="@+id/tvDetailContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="디테일 내용입니다"
                android:textSize="14dp"
                android:textColor="@color/bgDarkGrey"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>