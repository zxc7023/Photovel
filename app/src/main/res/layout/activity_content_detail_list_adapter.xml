<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/bgGrey">
            <TextView
                android:id="@+id/iccircle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_circle"
                android:textSize="6dp"
                android:textColor="@color/textBlack"
                android:gravity="center"/>
            <TextView
                android:id="@+id/iccircle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_circle"
                android:textSize="6dp"
                android:textColor="@color/textBlack"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/iccircle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_circle"
                    android:textSize="40dp"
                    android:textColor="@color/textBlack"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/bgWhite"
                    android:layout_alignBottom="@id/iccircle3"
                    android:layout_alignLeft="@id/iccircle3"
                    android:layout_alignRight="@id/iccircle3"
                    android:layout_alignTop="@id/iccircle3"
                    android:gravity="center"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/iccircle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_circle"
                android:textSize="6dp"
                android:textColor="@color/textBlack"
                android:gravity="center"/>
            <TextView
                android:id="@+id/iccircle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_tint"
                android:textSize="10dp"
                android:textColor="@color/textBlack"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llvphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line">
            <ImageView
                android:id="@+id/ivphoto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@drawable/xml_border"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/line"
                android:scaleType="centerCrop">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lldetailInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:layout_below="@+id/llvphoto">
            <TextView
                android:id="@+id/icmarker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fa_icon_marker"
                android:textSize="@dimen/icon_size"
                android:textColor="@color/textPurple"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/most_left_tv_margin"
                android:layout_marginRight="@dimen/between_tv_margin"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="서울시 마포구"
                android:textSize="@dimen/content_text_size"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2017/06/06"
                android:textSize="@dimen/content_text_size"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lldetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/xml_border"
            android:layout_below="@+id/lldetailInfo">
            <TextView
                android:id="@+id/tvDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="디테일 내용입니다"
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/bgDarkGrey"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/most_left_tv_margin"
                android:layout_marginRight="@dimen/most_rignt_tv_margin"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>