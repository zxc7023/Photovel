<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_store"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/RlmainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/RLBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:visibility="invisible">
            <TextView
                android:id="@+id/tvbookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_bookmark"
                android:textColor="@color/bgWhite"
                android:textSize="@dimen/icon_size"
                android:layout_marginTop="@dimen/most_rignt_tv_margin"
                android:layout_marginRight="@dimen/most_rignt_tv_margin"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/main_ivphoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="@color/bgToMeong"
            android:orientation="vertical"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/llmainSubject"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bgToMeong"
            android:gravity="center"
            android:layout_above="@+id/llmainButtons"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/contentSubject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="contentSubject"
                    android:textColor="@color/bgWhite"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llmainButtons"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/main_ivphoto"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llthumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_icthumb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="left|center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_thumbs_o_up"
                    android:textSize="@dimen/icon_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llcomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_iccomment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_comments"
                    android:textSize="@dimen/icon_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llshare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="right|center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_icshare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/bgDarkGrey"
                    android:text="@string/fa_share"
                    android:textSize="@dimen/icon_size"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>