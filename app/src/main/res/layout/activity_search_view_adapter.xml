<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llmainSubject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/xml_border4"
        android:gravity="center"
        android:layout_above="@+id/llmainButtons"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="left">
            <TextView
                android:id="@+id/contentSubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="contentSubject"
                android:textColor="@color/bgWhite"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/userProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_circle"
                app:civ_border_width="1dp"
                android:layout_marginRight="@dimen/between_tv_margin"/>
            <TextView
                android:id="@+id/userNickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:gravity="center|right"
                android:text="userNickname"
                android:textColor="@color/bgWhite"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>