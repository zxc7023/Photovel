<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivphoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/xml_border"
            android:layout_alignParentTop="true">
        </ImageView>
        <LinearLayout
            android:id="@+id/lldetailSetting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/lldetailInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#805e5e5e">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/contentSubject"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="세부여행"
                    android:textSize="22dp"
                    android:textColor="@color/bgWhite"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/userNickname"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="leeej"
                    android:textSize="22dp"
                    android:textColor="@color/bgWhite"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lldetailInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:layout_below="@+id/ivphoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/icmarker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/fa_thumbs_o_up"
                android:textSize="30dp"
                android:textColor="@color/textPurple"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/fa_flag"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/icpen1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/fa_share"
                android:textSize="22dp"
                android:textColor="@color/textBlue"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>