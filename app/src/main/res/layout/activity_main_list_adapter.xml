<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_store"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llmainTop">
        <ImageView
            android:id="@+id/main_ivphoto"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/bgToMeong"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true">
        </ImageView>
        <LinearLayout
            android:id="@+id/llmainSubject"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_above="@+id/llmainButtons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/bgToMeong"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/contentSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/bgWhite"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llmainButtons"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:background="@drawable/xml_border"
            android:layout_below="@+id/main_ivphoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/main_icthumb"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/fa_thumbs_o_up"
                android:textSize="14dp"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/main_iccomment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/fa_comments"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/main_icshare"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/fa_share"
                android:textSize="14dp"
                android:gravity="right|center"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>