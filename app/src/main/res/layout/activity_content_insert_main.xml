<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@color/bgBlackAlpha"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:font="normal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_profile_circle"
                        app:civ_border_width="1dp"
                        android:layout_marginLeft="@dimen/most_left_tv_margin"
                        android:layout_marginRight="@dimen/between_tv_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Jeon hara"
                        android:textSize="@dimen/content_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/bgWhite"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/most_rignt_tv_margin">
                        <Switch
                            android:id="@+id/swPrivate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="공개설정 "
                            android:textStyle="bold"
                            android:textColor="@color/bgWhite"
                            android:textSize="@dimen/content_text_size"
                            android:textOff="off"
                            android:textOn="on"
                            android:track="@drawable/switch_track_selector"
                            android:thumb="@drawable/switch_thumb_selector" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_edittext">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="제목"
                        android:textSize="@dimen/content_text_size"
                        android:gravity="center_vertical"
                        android:textColor="@color/bgDarkGrey"
                        android:layout_marginLeft="@dimen/most_left_tv_margin"/>
                    <EditText
                        android:id="@+id/contentSubject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="제목을 입력해주세요"
                        android:textColorHint="@color/bgGrey2"
                        android:textColor="@color/bgDarkGrey"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/content_text_size"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_marginRight="@dimen/most_rignt_tv_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/bgWhite">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="내용"
                        android:textSize="@dimen/content_text_size"
                        android:textColor="@color/bgDarkGrey"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/most_left_tv_margin"/>
                    <EditText
                        android:id="@+id/contentText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="내용을 입력해주세요"
                        android:textColorHint="@color/bgGrey2"
                        android:textColor="@color/bgDarkGrey"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/content_text_size"
                        android:layout_marginRight="@dimen/most_rignt_tv_margin"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:contentScrim="@color/colorPrimary"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    android:background="@color/colorPrimary"
                    android:fitsSystemWindows="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/fa_chevron_left"
                        android:textSize="@dimen/icon_size"
                        android:textColor="@color/bgWhite"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/most_left_tv_margin"
                        android:layout_marginRight="@dimen/between_tv_margin"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="여행 쓰기"
                        android:textSize="@dimen/content_text_size"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="right">
                        <Button
                            android:id="@+id/btnSort"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="정렬"
                            android:textSize="@dimen/content_text_size"
                            android:background="@color/bgNo" />
                        <Button
                            android:id="@+id/btnPhotoSave"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="저장"
                            android:textSize="@dimen/content_text_size"
                            android:background="@color/bgNo"
                            android:layout_marginRight="@dimen/most_rignt_tv_margin"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGrey"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:font="normal"
        android:fillViewport="true"
        android:id="@+id/nestedScrollView">
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddPhots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        android:src="@drawable/btn_plus"
        app:backgroundTint="@color/colorAccent"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginRight="@dimen/most_rignt_tv_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/most_rignt_tv_margin"
        android:clickable="true"
        android:visibility="gone"
        android:src="@drawable/btn_up"
        app:backgroundTint="@color/bgWhite"/>

</android.support.design.widget.CoordinatorLayout>


